<h1>Eat Da Burger!</h1>

<img src="pic_trulli.jpg" alt="Italian Trulli">
<div id= "devBuger">
<h2>Burgers to Devour!</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devour = true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div id = "notDevBerger">
<h2> Burger! that are devoured</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devour = false}}
    {{/if}}
  {{/each}}
</ul>
</div>
<div id ="addBurger">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca"Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">

    <label for="burgerName">Burger Name</label>
    <input type ="text" id="burg" name="name">
    <br>
    <input type="radio" name="Devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="wantToDevour!" value="0"> Want to Devoured!
  </div>

  <button type="submit">Add Cat</button>
</form>
</div>
